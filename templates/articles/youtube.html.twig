{% import "/articles/youtube.html.twig" as macros %}

{% macro flag(country) %}{% spaceless %}
    {% if country == 'fr' or country == 'en' or country == 'de' %}
        {% if country == 'fr' %}
            {% set lang = 'Francophone' %}
        {% elseif country == 'en' %}
            {% set lang = 'Anglophone' %}
        {% elseif country == 'de' %}
            {% set lang = 'Germanophone' %}
        {% endif %}
        <img class="flag" style="width: 20px" src="{{ basepath }}/img/flags/{{ country }}.svg" alt="{{ lang }}" title="{{ lang }}">
    {% endif %}
{% endspaceless %}{% endmacro %}

